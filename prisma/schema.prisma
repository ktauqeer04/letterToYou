generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_PROD")
}


model Letter {
  idUuid        String      @id @default(uuid())
  hashedUuid    String      @unique
  email         String      @unique
  content       Content[]
  isVerified    Boolean     @default(false)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model Content {
  idUuid        String      @id @default(uuid())
  content       String 
  sendDate      DateTime
  status        Status      @default(PENDING)

  letterId      String  

  letter        Letter      @relation(fields: [letterId], references: [idUuid], onDelete: Cascade)     

  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

enum Status {
  PENDING
  SENT
  FAILED
}