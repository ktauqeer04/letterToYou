generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Letter {
  uuid        String      @id @default(uuid())
  email       String   
  content     String
  isVerified  Boolean     @default(false)
  sendDate    DateTime
  status      Status      @default(PENDING)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

enum Status {
  PENDING
  SENT
  FAILED
}